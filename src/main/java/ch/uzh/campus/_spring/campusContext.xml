<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	    http://www.springframework.org/schema/beans/spring-beans.xsd
	    http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

	<context:annotation-config />
	<context:component-scan base-package="ch.uzh.campus" />

    <import resource="classpath:/ch/uzh/campus/connectors/_spring/campusBatchInfrastructureContext.xml"/>
    <import resource="classpath:/ch/uzh/campus/connectors/_spring/campusJobSchedulerContext.xml"/>
    <import resource="classpath:/ch/uzh/campus/connectors/_spring/campusBatchJobContext.xml"/>

    <import resource="classpath:/ch/uzh/campus/olat/_spring/olatContext.xml"/>
    <import resource="classpath:/ch/uzh/campus/presentation/_spring/campusPresentationContext.xml"/>
</beans>
